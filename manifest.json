{
"action": {
    "default_icon": {
        "16": "images/football-16.png",
        "32": "images/football-32.png",
        "128": "images/football-128.png"
    }
    },
  "permissions": ["tabs", "activeTab", "scripting"],
  "manifest_version": 3,
  "name": "Soccer play",
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "description": "Enable automatic opening of first football link on game.",
  "version": "1.0",
  "icons": {
    "16": "images/football-16.png",
    "32": "images/football-32.png",
    "128": "images/football-128.png"
  },
  "background": {
    "service_worker": "soccer.js"
  }
}